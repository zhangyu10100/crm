<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zhangyu.crm.workbench.dao.ActivityRemarkDao">

    <delete id="deleteByAids">
        delete from tbl_activity_remark

        where activityId in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
            #{aid}
        </foreach>
    </delete>

    <select id="getCountByAids" resultType="int">
        select count(*) from tbl_activity_remark

        where activityId in
        <foreach collection="array" item="aid" open="(" close=")" separator=",">
            #{aid}
        </foreach>
    </select>

    <select id="getRemarkListByAid" resultType="ActivityRemark">
        select * from tbl_activity_remark where activityId = #{activityId}
    </select>

    <delete id="deleteById">
        delete from tbl_activity_remark where id = #{id}

    </delete>

    <insert id="saveRemark">
        insert into tbl_activity_remark(
            noteContent,
            id,
            editFlag,
            createTime,
            createBy,
            activityId
        )
        values (
            #{noteContent},
            #{id},
            #{editFlag},
            #{createTime},
            #{createBy},
            #{activityId}
        )

    </insert>

    <update id="updateRemark">
        update tbl_activity_remark set noteContent=#{noteContent},editBy=#{editBy},editTime=#{editTime},editFlag=#{editFlag}
        where id=#{id}
    </update>
</mapper>
